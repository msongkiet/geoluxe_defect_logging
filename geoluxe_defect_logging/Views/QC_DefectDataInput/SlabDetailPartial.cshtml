@model geoluxe_defect_logging.Models.QC_SlabDefectList

<form class="form-horizontal" id="SlabInfoForm">
    <div class="container">
        <div class="col-md-12">
            <div class="form-group row"> 
                @Html.LabelFor(m => m.OrderNo, null, new { @class = "control-label col-md-1" })
                @Html.TextBoxFor(m => m.OrderNo, null, new { @class = "form-control col-md-11", @type = "text", @placeholder = "Auto-generated using slab id", @readonly = "readonly" })              
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.MatType, null, new { @class = "control-label col-md-1" })
                @Html.TextBoxFor(m => m.MatType, null, new { @class = "form-control col-md-11", @type = "text", @placeholder = "Auto-generated using slab id", @readonly = "readonly" })
            </div>

            <div class="form-group row">
                <label class="col-md-1 control-label">Shades</label>
                <div class="col-md-11">
                    <div class="dropdown">
                        <span>
                            <select id="Shades" name="Shades" class="form-control">
                                <option value="">เฉดสี</option>
                                <option value="J">J</option>
                                <option value="K">K</option>
                                <option value="L">L</option>
                                <option value="M">M</option>
                                <option value="N">N</option>
                            </select>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-1">ความกว้าง (mm)</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Width_1, null, new { @class = "form-control", @placeholder = "กว้าง1", @Required = "Required", @type = "number", @min = "0", @max = "1400", @step = "0.1" })
                    @Html.TextBoxFor(m => m.Width_2, null, new { @class = "form-control", @placeholder = "กว้าง2", @Required = "Required", @type = "number", @min = "0", @max = "1400", @step = "0.1" })
                </div>
                <label class="col-md-2 control-label">ความยาว (mm)</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Length_1, null, new { @class = "form-control", @placeholder = "ยาว1", @Required = "Required", @type = "number", @min = "0", @max = "3200", @step = "0.1" })
                    @Html.TextBoxFor(m => m.Length_2, null, new { @class = "form-control", @placeholder = "ยาว2", @Required = "Required", @type = "number", @min = "0", @max = "3200", @step = "0.1" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 control-label">ความหนา (mm)</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.Thickness_1, null, new { @class = "form-control", @placeholder = "หนา1", @Required = "Required", @type = "number", @min = "0", @max = "25", @step = "0.1" })
                    @Html.TextBoxFor(m => m.Thickness_2, null, new { @class = "form-control", @placeholder = "หนา2", @Required = "Required", @type = "number", @min = "0", @max = "25", @step = "0.1" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.Thickness_3, null, new { @class = "form-control", @placeholder = "หนา3", @Required = "Required", @type = "number", @min = "0", @max = "25", @step = "0.1" })
                    @Html.TextBoxFor(m => m.Thickness_4, null, new { @class = "form-control", @placeholder = "หนา4", @Required = "Required", @type = "number", @min = "0", @max = "25", @step = "0.1" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.Thickness_5, null, new { @class = "form-control", @placeholder = "หนา5", @Required = "Required", @type = "number", @min = "0", @max = "25", @step = "0.1" })
                    @Html.TextBoxFor(m => m.Thickness_6, null, new { @class = "form-control", @placeholder = "หนา6", @Required = "Required", @type = "number", @min = "0", @max = "25", @step = "0.1" })
                </div>
            </div>
        </div>
    </div>
</form>

